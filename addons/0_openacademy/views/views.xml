<odoo>
  <data>
     <record id="view_id" model="ir.ui.view">
	    <field name="name">view.name</field>
	    <field name="model">openacademy.course</field>
	    <field name="priority" eval="16"/>
	    <field name="arch" type="xml">
	       <tree string="Idea list">
			    <field name="description"/>
			    <field name="name"/>
			</tree>
	    </field>
	</record>
	
	<record id="course_list_action" model="ir.actions.act_window">
            <field name="name">Courses</field>
            <field name="res_model">openacademy.course</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create the first course
                </p>
            </field>
     </record>


        <menuitem id="main_openacademy_menu" name="Open Academy Root"/>
        
        <menuitem id="openacademy_menu" name="Course"
                  parent="main_openacademy_menu" action="course_list_action"/>
        
                  
                  
                  
                  
                  
                  
                  
                  
                  
                  
                  
                  
